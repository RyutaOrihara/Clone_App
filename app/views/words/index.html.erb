
<!-- 参考Bootstrap Custom content -->
<div class="container">
  <h2>ツイート 一覧</h2>
  <!-- コントローラで設定したフィードバックメッセージを表示する>-->

  <div class="new-word">
  <%= link_to "新しくツイートする",new_word_path,class: 'btn btn-primary' %>
  </div>
  <br>
  <div class="row">
  <% @words.each do |word| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="thumbnail">
        
        <img src="..." alt="...">
        <div class="caption">
          <h3><%= word.content %></h3>
          <%= word.user.name  %>
          <!-- <p><a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a></p> -->

          <p>
            <%= link_to "詳細を確認する", word_path(word.id),class: "btn btn-default", role: "button" %>
            <% if word.user_id  == current_user.id %>
              <%= link_to "ツイートを編集する", edit_word_path(word.id),class: "btn btn-default", role: "button" %>
              <%= link_to "削除する", word_path(word.id),class: "btn btn-default", role: "button",method: :delete, data: {confirm: '本当に削除してもいいですか？'} %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
<br>



